<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bottomNavigation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DetailMatch.Lineup2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/idlnteam2"
                android:layout_width="88dp"
                android:layout_height="72dp">
            </ImageView>

            <TextView
                android:id="@+id/idtvlineup2"
                android:layout_width="305dp"
                android:layout_height="72dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic">
            </TextView>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/idivlineup2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:paddingLeft="64dp"
            android:text="ĐỘI HÌNH CHÍNH"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:textColor="#08FF00">
        </TextView>

        <ImageView
            android:id="@+id/ivstarting2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY">
        </ImageView>
        <TextView
            android:id="@+id/idhlvln2"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:paddingLeft="64dp"
            android:textStyle="italic|bold"
            android:textColor="#08FF00"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </TextView>
        <TextView
            android:text="DỰ BỊ"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:paddingLeft="64dp"
            android:textStyle="italic|bold"
            android:textColor="#08FF00"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </TextView>
        <ImageView
            android:id="@+id/ivdubi2"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </ImageView>
        <TextView
            android:id="@+id/tvviewln2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </TextView>
    </LinearLayout>
</ScrollView>