<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottomNavigation"
    tools:context=".activity.main.find">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/bottomNavigation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idbackfast"
                android:layout_width="50dp"
                android:layout_marginTop="5dp"
                android:layout_height="37dp"
                android:background="@drawable/back"
                android:textColor="#F4F4F5"
                android:textSize="26dp"
                android:textStyle="bold">
            </Button>
            <TextView
                android:id="@+id/idtvtimkiem"
                android:layout_width="347dp"
                android:layout_height="40dp"
                android:text="TÌM KIẾM"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/idsearchview"
                android:layout_width="346dp"
                android:layout_height="42dp"
                android:layout_marginTop="3dp"
                android:background="@color/bottomNavigation"
                android:backgroundTint="@color/white"
                android:textColor="@color/bottomNavigation"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold">
            </EditText>

            <Button
                android:id="@+id/idcheckboxfind"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/help">
            </Button>

        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultfindfast"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp">
    </androidx.recyclerview.widget.RecyclerView>
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/resultfindfasthot"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:paddingLeft="50dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="fill_parent"-->
<!--            android:layout_marginBottom="5dp">-->
<!--        </androidx.recyclerview.widget.RecyclerView>-->
    </LinearLayout>
</ScrollView>