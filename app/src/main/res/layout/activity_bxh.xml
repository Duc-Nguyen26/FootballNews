<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.bxh">
<LinearLayout
    android:background="@color/bottomNavigation"
    android:orientation="vertical"
    android:weightSum="8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/bottomDetailmatch">

    <TextView
        android:id="@+id/idtvbxh"
        android:layout_width="339dp"
        android:layout_height="40dp"
        android:background="@color/bottomDetailmatch"
        android:gravity="center"
        android:text="BẢNG XẾP HẠNG"
        android:textColor="#EEEEE8"
        android:textSize="26dp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/idbtppmenubxh"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:background="@drawable/popupmenu">
    </Button>
</FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/bottomNavigation"
        android:id="@+id/idREselectbxh"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="66dp">
    </androidx.recyclerview.widget.RecyclerView>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/idRElich"-->
<!--        android:background="@color/bottomNavigation"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_marginBottom="46dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1000dp">-->
<!--    </androidx.recyclerview.widget.RecyclerView>-->



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutbxh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:tabBackground="@color/bottomDetailmatch"
        app:tabIndicatorColor="#27E211"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#EC0923"
        app:tabTextColor="#090CEB">

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerbxh"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_marginTop="5dp"
        android:layout_weight="6"
        android:background="#0A0A0A"
        android:layout_marginBottom="46dp">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>
</ScrollView>