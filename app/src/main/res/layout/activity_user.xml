<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="#090908"
    tools:context=".activity.User.User">

    <ImageView
        android:layout_width="173dp"
        android:layout_height="129dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/fb">
    </ImageView>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/idtoprofile"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/bottomNavigation"
            android:textSize="19sp">
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/nameuser"
        android:hint="Tài Khoản"
        android:textSize="19sp"
        android:textColorHint="@color/white"
        android:textColor="#ff0"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <TextView
        android:id="@+id/emailuser"
        android:hint="Gmail"
        android:textSize="19sp"
        android:textColorHint="#F1F1F3"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <TextView
        android:id="@+id/genderuser"
        android:hint="Giới tính"
        android:textColorHint="@color/white"
        android:textSize="19sp"
        android:textColor="#F1F1ED"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <TextView
        android:id="@+id/locationuser"
        android:hint="Quốc gia"
        android:textColorHint="@color/white"
        android:textSize="19sp"
        android:textColor="#E7E7E3"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <Button
        android:text="Giải trí"
        android:textColor="#F1F1F3"
        android:gravity="left|center"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:background="@color/bottomNavigation"
        android:layout_height="50dp">
    </Button>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:text="Bật thông báo"
        android:textSize="19sp"
        android:textColor="#F3F3ED"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="330dp"
        android:layout_height="50dp">
    </TextView>

        <ToggleButton
            android:layout_width="78dp"
            android:layout_height="wrap_content">
        </ToggleButton>
    </LinearLayout>


    <Button
        android:id="@+id/btdangxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
<!--    <VideoView-->
<!--        android:id="@+id/idvduser"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="234dp">-->
<!--    </VideoView>-->
</LinearLayout>