<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".activity.main.Detailfast">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="48dp">


    <Button
        android:id="@+id/idbackhome"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/back">
    </Button>
    <TextView
        android:layout_gravity="center"
        android:text="Tin Vắng"
        android:id="@+id/blinkdf"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="29sp"
        android:textStyle="bold|italic"
        android:layout_width="200dp"
        android:layout_height="48dp">
    </TextView>
</FrameLayout>

        <TextView
            android:id="@+id/idheader"
            android:layout_width="396dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/botrondetailmatch"
            android:gravity="center"
            android:textColor="#EBE5E5"
            android:textSize="20sp"
            android:textStyle="italic">
        </TextView>
        <ImageView
            android:id="@+id/idAvatar1"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="15dp"
            android:layout_weight="3">

        </ImageView>

        <TextView
            android:id="@+id/idDetail1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="2dp"
            android:scrollbarStyle="insideInset"
            android:textColor="#FAF8F8"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>
        <ImageView
            android:id="@+id/idAvatar2"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="15dp"
            android:layout_weight="3">

        </ImageView>
        <TextView
            android:id="@+id/idDetail2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="4"
            android:scrollbarStyle="insideInset"
            android:textColor="#FAF8F8"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>

        <FrameLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/TimeDetailfast"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:paddingLeft="7dp"
                android:textColor="#FAF8F8"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/LeagueDetailfast"
                android:layout_width="168dp"
                android:layout_height="30dp"
                android:layout_marginLeft="85dp"
                android:textColor="#FAF8F8"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/SourceDetailfast"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:textColor="#FAF8F8"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp">
            </EditText>
            <Button
                android:text="ĐĂNG"
                android:textSize="18sp"
                android:background="#4365DF"
                android:layout_gravity="right"
                android:layout_width="100dp"
                android:layout_height="50dp">
            </Button>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rccmtdetauilfast"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>